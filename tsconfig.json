{
    "compilerOptions": {
        "lib": [ "es2015", "ES2021.String" ],
        "target": "ES5",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "strict": false,
        "types": ["node", "jest"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}